---
import { z } from "astro:content";
import { AstroIcon } from "~/components";

type Props = z.infer<typeof props>;

const props = z.object({
	header: z.string(),
	href: z.string(),
	product: z.string(),
});

const { header, href, product } = props.parse(Astro.props);
---

<div class="grid grid-cols-[32px_auto] gap-x-2 items-start">
	<AstroIcon name={product} class="text-accent-600 dark:text-accent-200 text-7xl" />
	<div class="!mt-0">
		<strong>
			<a href={href} class="!text-black dark:!text-white decoration-accent-600 dark:decoration-accent-200"
				>{header}</a
			>
		</strong>
		<slot />
	</div>
</div>
