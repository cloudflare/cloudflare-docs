{
  "extends": "@vue/tsconfig/tsconfig.web.json",

  "include": [
    "env.d.ts",
    "components/**/*",
    "components/**/*.vue",
    "assets/*.ts"
  ],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./components/*"]
    },
    "resolveJsonModule": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
