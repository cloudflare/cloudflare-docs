{{- $product := $.Params.changelog_file_name -}}
{{- $productData := index (index .Site.Data $product) "product" -}}
{{- $title := printf "%s Â· %s" .Title $productData.title -}}
{{- $atomLink := print .Permalink "index.xml" -}}
{{- $changelogData := index (index (index .Site.Data "changelogs") $product) "entries" -}}
{{- $changelogData = sort $changelogData "date" "desc" -}}
{{- $permalink := .Permalink -}}
{{- $link := "" -}}

<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ $title }}</title>
    <link>{{ $permalink }}</link>
    <description>Updates to Cloudflare's {{$productData.title}} product.</description>
    <language>en-us</language>
    <atom:link href="{{$atomLink}}" rel="self" />
    <lastBuildDate>TBD</lastBuildDate>
    {{- range $changelogData -}}
    {{ $description := .description | $.Page.RenderString | htmlUnescape }}
    {{- with .title -}}
    {{- $link = print $permalink "#" (urlize .) -}}
    {{- else -}}
    {{- $link = print $permalink "#" (urlize .publish_date) -}}
    {{- end -}}
    <item>
    <title>{{- with .title -}}{{ . }}{{ else }}{{ .publish_date }}{{ end }}</title>
    <link>{{ $link }}</link>
    <description>{{ $description }}</description>
    <pubDate>{{ .publish_date | time.Format "Monday, Jan 2, 2006" }}</pubDate>
    </item>
    {{- end -}}
  </channel>
</rss>